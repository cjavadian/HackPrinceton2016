<link rel="stylesheet" href="../../public/css/main.css" >

<div class="row">
  <div class="col-sm-12">
    <h2 class="hp-header">SORRY BUT(T)...</h2>
    <form class="server-form" method="post">
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-default">Generate Excuse</button>
      </div>
      {{#if result }}
      <div class="form-group">
        <div class="alert alert-success">
          Sorry, but {{ result }}
        </div>
      </div>
      {{/if}}
    </form>
  </div>
</div>
